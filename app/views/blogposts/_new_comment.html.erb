<% if signed_in? %>
  <h4>Leave a comment:</h4>
  <%= form_for([@blogpost, @blogpost.comments.build]) do |f| %>
    <p>
      <%= f.label :body, "Comment" %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name %>
    </p> 
    <p>
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name %>
    </p>  
    <p>
      <%= f.submit "Submit" %>
    </p>
  <% end %>
<% end %>