<div class="container">
  <div class="row">
    <div class="col-md-8">

      <h1>Contact me!</h1>
      <%= flash[:notice] %>

      <%= form_tag("/static_pages/thank_you") do %>
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <%= label_tag :name %>
            <%= text_field_tag :name, nil, class: "form-control", placeholder: "Your Name" %>
          </div>      
          <div class="form-group">
            <%= label_tag :email, "Email Address" %>
            <%= text_field_tag :email, nil, class: "form-control", placeholder: "Your Email" %>
          </div>
          <div class="form-group">
            <%= label_tag :message %>
            <%= text_area_tag :message, nil, class: "form-control", placeholder: "Your Message" %>
          </div>      
        </div>
      </div>
      <%= submit_tag "Send" %>   
      <% end %>
    </div><!-- /col -->

  </div><!-- /row -->
</div><!-- /container -->